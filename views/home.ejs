        <div class="for-today-box">
          completar
        </div>
      </div>


    </section>

    <section class="exercises-data-box">
      <div class="exercise-box">
        <div class="data-display">
          <div class="title-box">
            <h3 class="title">PullUps</h3>
            <hr>
          </div>
          <div class="data-box">
            <p class="total"><span><%= data[0].total %></span>reps</p> 
          </div>
        </div>
        <!-- HOVER -->
        <div class="hover-data-display">
          <div class="title-box">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24""><path d="M6 5v14h3v-6h6v6h3V5h-3v6H9V5zM3 15a1 1 0 0 0 1 1h1V8H4a1 1 0 0 0-1 1v2H2v2h1v2zm18-6a1 1 0 0 0-1-1h-1v8h1a1 1 0 0 0 1-1v-2h1v-2h-1V9z"></path></svg>
            <h3 class="title">PullUps</h3>
          </div>
          <div class="data-box"">
            <div class="total">
              <span class="number""><%= data[0].total %></span>
              <span>reps</span>
            </div>
            <div class="extra-data-box"">
              <div>
                <p class="subtitle">Max:</p>
                <span class="num-display"><span class="number"><%= data[0].max %></span>reps</span>
              </div>
              <div>
                <p class="subtitle">Heaviest:</p>
                <span class="num-display"><span class="number"><%= data[0].heaviest %></span>kg</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="exercise-box">
        <div class="data-display">
          <div class="title-box">
            <h3 class="title">Muscle Ups</h3>
            <hr>
          </div>
          <div class="data-box">
            <p class="total"><span><%= data[1].total %></span>reps</p> 
          </div>
        </div>
        <!-- HOVER -->
        <div class="hover-data-display">
          <div class="title-box">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24""><path d="M6 5v14h3v-6h6v6h3V5h-3v6H9V5zM3 15a1 1 0 0 0 1 1h1V8H4a1 1 0 0 0-1 1v2H2v2h1v2zm18-6a1 1 0 0 0-1-1h-1v8h1a1 1 0 0 0 1-1v-2h1v-2h-1V9z"></path></svg>
            <h3 class="title">Muscle Ups</h3>
          </div>
          <div class="data-box">
            <div class="total">
              <span class="number"><%= data[1].total %></span>
              <span>reps</span>
            </div>
            <div class="extra-data-box">
              <div>
                <p class="subtitle">Max:</p>
                <span class="num-display"><span class="number"><%= data[1].max %></span>reps</span>
              </div>
              <di>
                <p class="subtitle">Heaviest:</p>
                <span class="num-display"><span class="number"><%= data[1].heaviest %></span>kg</span>
              </di>
            </div>
          </div>
        </div>
      </div>
    </section>

